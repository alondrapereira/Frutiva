<body class="in-out-back">
<!-- PAGE CONTAINER -->
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <nav id="root" class="root mn--max hd--expanded">

        <!-- CONTENTS -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <section id="content" class="content">
            <div class="content__header content__boxed overlapping">
                <div class="content__wrap pt-3 pb-4">
                    <h1 class="page-title mb-2 mt-4">Welcome to Frutiva!</h1>
                    <p class="lead">
                        Experience the delights of nature's gift: fruits. 
                    </p>
                </div>
            </div>
            <!-- FOOTER -->
            <footer class="border-top mt-auto">
                <div class="content__boxed">
                    <div class="content__wrap py-3 py-md-1 d-flex flex-column flex-md-row align-items-md-center">
                        <div class="text-nowrap mb-4 mb-md-0">Copyright © 2021 <a href="#" class="h6 text-decoration-none ms-1">My Company</a></div>
                        <nav class="nav flex-column gap-1 flex-md-row gap-md-3 ms-md-auto me-5" style="row-gap: 0 !important;">
                            <a class="nav-link px-0" href="#">Policy Privacy</a>
                            <a class="nav-link px-0" href="#">Terms and conditions</a>
                            <a class="nav-link px-0" href="#">Contact Us</a>
                        </nav>
                    </div>
                </div>
            </footer>
            <!-- END - FOOTER -->
        </section>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- END - CONTENTS -->
        <!-- HEADER -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <header class="header">
            <div class="header__inner">
                <!-- Brand -->
                <div class="header__brand" color="">
                    <div class="brand-wrap">

                        <!-- Brand logo -->
                        <a href="./index.html" class="brand-img stretched-link">
                            <img src="./img/acai.png" alt="Logo">
                        </a>

                        <!-- Brand title -->
                        <div class="brand-title">Frutiva</div>
                    </div>
                </div>
                <!-- End - Brand -->
                <div class="header__content">
                    <!-- Content Header - Left Side: -->
                    <div class="header__content-start">

                        <!-- Navigation Toggler -->
                        <button type="button" class="nav-toggler header__btn btn btn-icon btn-sm">
                            <i class="demo-psi-view-list"></i>
                        </button>
                    </div>
                    <!-- End - Content Header - Left Side -->
                    <!-- Content Header - Right Side: -->
                    <div class="header__content-end">
                        <!-- Sidebar Toggler -->
                        <button class="sidebar-toggler header__btn btn btn-icon btn-sm" type="button">
                            <i class="demo-psi-dot-vertical"></i>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- END - HEADER -->
        <!-- MAIN NAVIGATION -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <nav id="mainnav-container" class="mainnav">
            <div class="mainnav__inner">

                <!-- Navigation menu -->
                <div class="mainnav__top-content scrollable-content pb-5">

                <!-- Navigation Category -->
                    <h6 class="mainnav__caption mt-5 px-3 fw-bold">Navigation</h6>
                    <ul class="mainnav__menu nav flex-column">
                        <!-- Menu -->
                        <li class="nav-item">
                            <a href="/" class="nav-link mininav-toggle collapsed"><i class="demo-pli-gear fs-5 me-2"></i>

                                <span class="nav-label mininav-content">Home</span>
                            </a>
                        </li>
                        <!-- END : Menu -->
                         <!-- Menu -->
                        <li class="nav-item">
                            <a href="/menu" class="nav-link mininav-toggle collapsed"><i class="demo-pli-gear fs-5 me-2"></i>

                                <span class="nav-label mininav-content">Menu</span>
                            </a>
                        </li>
                         <li class="nav-item">
                            <a  class="nav-link mininav-toggle collapsed"><i class="demo-pli-gear fs-5 me-2"></i>

                                <span class="nav-label mininav-content">Order Now</span>
                            </a>
                        </li>
                        <!-- END : Menu -->
                    </ul>
                    <!-- END : Navigation Category -->
                <!-- END - MAIN NAVIGATION -->
                </div>
            </div>
